using UnityEngine;
using System.Collections;

public class robreno_week2_1 : MonoBehaviour 
{
	 
	public string name;
	private string hello = "Hi my name is Gabriel Robreno";
	private string goodbye = "This part of the homework is done. Goodbye.";

	void Main()
	{
		print (hello + " " + name + ".");
		print (goodbye);
	}
	// Use this for initialization
	void Start () {

	}

	// Update is called once per frame
	void Update () 
	{
	
	}
}
//The big point of this assignment is that the variable 'name' is
//supplied by the user in the Inspector, and the function 'Main' takes it and uses
//it to fill in the variable of your choosing when it calls SayHello(name) and SayGoodbye(), 
//two functions that you had to use in the assignment.
